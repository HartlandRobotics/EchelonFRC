<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_admin_start_scouting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Scouting"
        app:layout_constraintBottom_toTopOf="@id/pitScoutingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pitScoutingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pit Scouting"

        app:layout_constraintTop_toBottomOf="@id/main_admin_start_scouting"
        app:layout_constraintBottom_toTopOf="@id/main_admin_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_admin_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Settings"

        app:layout_constraintTop_toBottomOf="@id/pitScoutingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tba_button"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tba_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBA"
        app:layout_constraintTop_toBottomOf="@id/main_admin_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabtest"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tabtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab Test"
        app:layout_constraintTop_toBottomOf="@id/tba_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
