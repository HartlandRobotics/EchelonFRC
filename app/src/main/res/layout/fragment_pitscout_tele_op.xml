<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".pitScouting.PitScoutTeleOpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/doesRobotShootSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/robotShootSpeakerNo"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can your robot shoot in Speaker?"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotShootSpeakerYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotShootSpeakerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/doesRobotShootAmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/robotShootAmpNo"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can your robot shoot in Amp?"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotShootAmpYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotShootAmpNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/shootingAccuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How many rings can you cycle per match?"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/goalPreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/goalPreferenceLow"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which goal do you prefer to shoot in?"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/goalPreferenceSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speaker" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/goalPreferenceAmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/robotDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/robotDefenseNo"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you willing to play defense?"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotDefenseYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/robotDefenseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

    </LinearLayout>
</LinearLayout>