                tools:text="3536"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/blue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3536"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/blue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
