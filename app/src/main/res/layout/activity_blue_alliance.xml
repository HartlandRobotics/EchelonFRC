<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlueAllianceActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/syncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Blue Alliance Status"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="118dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/syncDistricts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/syncButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Blue Alliance Districts"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="118dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/syncTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/syncDistricts"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Blue Alliance Teams"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/errorTextDistricts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/errorText"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/errorTextTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/errorTextDistricts"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
