<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hapticFeedbackEnabled="false"
            android:text="Tele op"
            android:textColor="#000000"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/doesRobotShoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/robotDoesntShoot"
            android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can your robot shoot?"
            />
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/robotDoesShoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/robotDoesntShoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/shootingAccuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How many shots do you make out of 10?">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

